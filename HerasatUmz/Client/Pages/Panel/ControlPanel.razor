@page "/panel"
@attribute [Authorize(Policy = "AdminOrManagerOrPaymentUser")]
@inherits BaseComponent
@layout PanelLayout


<PageTitle>داشبورد</PageTitle>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>داشبورد</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box">
                <span class="info-box-icon bg-info elevation-1"><i class="fa fa-user"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">کل اعضا</span>
                    <span class="info-box-number">@overview?.TotalUsers</span>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
                <span class="info-box-icon bg-danger elevation-1"><i class="fa fa-user"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">اعضا غیرفعال</span>
                    <span class="info-box-number">@overview?.ActiveUsers</span>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
                <span class="info-box-icon bg-success elevation-1"><i class="fa fa-user"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">کل مراجعین</span>
                    <span class="info-box-number">@visitLogs?.Items.Count()</span>
                </div>
            </div>
        </div>

        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
                <span class="info-box-icon bg-warning elevation-1"><i class="fa fa-users"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">افراد حاضر</span>
                    <span class="info-box-number">2</span>
                </div>
            </div>
        </div>
    </div>

    <!-- جدول لاگ‌ها -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header border-transparent">
                    <h3 class="card-title">لاگ‌های بازدید کاربران</h3>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table m-0">
                            <thead>
                                <tr>
                                    <th>نام کاربر</th>
                                    <th>کد ملی</th>
                                    <th>IP</th>
                                    <th>صفحه</th>
                                    <th>نوع رویداد</th>
                                    <th>تاریخ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (visitLogs == null)
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">در حال بارگذاری...</td>
                                    </tr>
                                }
                                else if (!visitLogs.Items.Any())
                                {
                                    <tr>
                                        <td colspan="6" class="text-center text-muted">هیچ لاگی ثبت نشده است</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var log in visitLogs.Items)
                                    {
                                        <tr>
                                            <td>@log.UserName</td>
                                            <td>@log.Codeid</td>
                                            <td>@log.Ip</td>
                                            <td>@log.Page</td>
                                            <td>
                                                @if (log.EventType == "enter")
                                                {
                                                    <span class="badge badge-success">ورود</span>
                                                }
                                                else if (log.EventType == "leave")
                                                {
                                                    <span class="badge badge-danger">خروج</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">@log.EventType</span>
                                                }
                                            </td>
                                            <td>@log.Timestamp?.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@code {
    private DashboardOverview? overview;
    private PagedResult<VisitLogResponseDto>? visitLogs;

    protected override async Task OnInitializedAsync()
    {
        overview = await Http.GetFromJsonAsync<DashboardOverview>("api/dashboard/overview");
        visitLogs =await Logger.GetAllLogAsync();

    }
}
