        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
        </aside>
    </div>
</body>

@code {
    private bool sidebarCollapsed = false;
    private bool isDarkMode = false;
    private bool showUserDropdown = false;
    private bool showNotifications = false;
    private bool financeMenuOpen = false;
    private bool isMobile = false;
    private string searchQuery = "";
    private string userAvatar = "";
    private Application.DTOs.User.UserDto? currentUser;
    private int pendingCount = 3;
    private int notificationCount = 2;

    protected override async Task OnInitializedAsync()
    {
        await UserContext.InitializeAsync();
        await base.OnInitializedAsync();
        CheckIfMobile();
        LoadUserPreferences();
        StateHasChanged();

        _ = Task.Run(async () =>
        {
            while (true)
            {
                await Task.Delay(30000);
                await InvokeAsync(StateHasChanged);
            }
        });
    }

    private void CheckIfMobile()
    {
        isMobile = false;
        if (isMobile)
        {
            sidebarCollapsed = true;
        }
    }

    private void LoadUserPreferences()
    {
        isDarkMode = false;
    }



    private void ToggleSidebar()
    {
        sidebarCollapsed = !sidebarCollapsed;
    }

    private void CloseSidebar()
    {
        if (isMobile)
        {
            sidebarCollapsed = true;
        }
    }




    private void ToggleDarkMode()
    {
        isDarkMode = !isDarkMode;
    }





    private void ToggleFinanceMenu()
    {
        financeMenuOpen = !financeMenuOpen;
    }



    private string GetActiveClass(string path)
    {
        var currentPath = new Uri(Navigation.Uri).AbsolutePath;
        if (path == "/panel" && currentPath == "/panel")
        {
            return "active";
        }
        if (path != "/panel" && currentPath.StartsWith(path, StringComparison.OrdinalIgnoreCase))
        {
            return "active";
        }
        return "";
    }


    private async Task Logout()
    {
        await Http.GetAsync("api/auth/Logout");
        Navigation.NavigateTo("/login");

    }
}