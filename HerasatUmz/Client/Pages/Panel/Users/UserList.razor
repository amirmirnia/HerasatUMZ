@page "/panel/users"
@attribute [Authorize(Policy = "AdminOrManager")]
@inherits BaseComponent
@layout PanelLayout


        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>لیست کاربران</h1>
                    </div>
                </div>
            </div>
        </section>


<div class="users-container">
    <div class="row">
        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box">
                <span class="info-box-icon bg-info elevation-1"><i class="fas fa-users"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">مجموع کاربران</span>
                    <span class="info-box-number">@totalUsersCount</span>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
                <span class="info-box-icon bg-success elevation-1"><i class="fas fa-user-check"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">کاربران فعال</span>
                    <span class="info-box-number">@activeUsersCount</span>
                </div>
            </div>
        </div>
        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
                <span class="info-box-icon bg-warning elevation-1"><i class="fas fa-user-shield"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">مدیر سایت</span>
                    <span class="info-box-number">@adminUsersCount</span>
                </div>
            </div>
        </div>
        <div class="clearfix hidden-md-up"></div>
        <div class="col-12 col-sm-6 col-md-3">
            <div class="info-box mb-3">
                <span class="info-box-icon bg-primary elevation-1"><i class="fas fa-user-plus"></i></span>
                <div class="info-box-content">
                    <span class="info-box-text">کاربر جدید</span>
                    <span class="info-box-number">
                        <button class="btn btn-primary btn-sm" @onclick="NavigateToCreateUser">
                            <i class="fas fa-plus"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="card card-danger">
        <div class="card-header">
            <h3 class="card-title">فیلتر و جستجو</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>جستجو کاربران</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                            </div>
                            <input id="searchQuery" type="text" @bind="searchQuery" @bind:event="oninput" @bind:after="LoadUsers"
                                   class="form-control" placeholder="جستجو بر اساس نام، ایمیل یا محل کار..." />
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label>نقش کاربران</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-user-tag"></i></span>
                            </div>
                            <select id="roleFilter" @bind="selectedRole" @bind:after="LoadUsers" class="form-control">
                                <option value="">همه</option>
                                @foreach (UserRole role in Enum.GetValues(typeof(UserRole)))
                                {
                                    <option value="@role">@GetRoleDisplayName(role)</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label>وضعیت</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-power-off"></i></span>
                            </div>
                            <select id="statusFilter" @bind="selectedStatus" @bind:after="LoadUsers" class="form-control">
                                <option value="">همه</option>
                                <option value="True">فعال</option>
                                <option value="False">غیر فعال</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-3">
                    <div class="form-group">
                        <label>محل کار</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-building"></i></span>
                            </div>
                            <select id="companyFilter" @bind="selectedCompany" @bind:after="LoadUsers" class="form-control">
                                <option value="">همه</option>
                                @foreach (var company in companies)
                                {
                                    <option value="@company">@company</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <a class="btn btn-app" @onclick="ResetFilters">
                    <i class="fa fa-repeat"></i> پاک کردن
                </a>

            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">لیست کاربران</h3>
        </div>
        <div class="card-body">
            @if (isLoading)
            {
                <div class="overlay"><i class="fas fa-2x fa-sync-alt fa-spin"></i></div>
            }
            else if (filteredUsers == null || !filteredUsers.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-user-times fa-3x text-muted"></i>
                    <h3>کاربری یافت نشد</h3>
                    <p>می‌توانید اولین کاربر را ایجاد کنید.</p>
                    <button class="btn btn-primary" @onclick="NavigateToCreateUser">
                        <i class="fas fa-user-plus"></i> ثبت کاربر
                    </button>
                </div>
            }
            else
            {
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>نام و نام خانوادگی</th>
                            <th>ایمیل / تماس</th>
                            <th>کد ملی</th>
                            <th>نقش</th>
                            <th>محل کار</th>
                            <th>وضعیت</th>
                            <th>عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in filteredUsers)
                        {
                            <tr>
                                <td><i class="fas fa-user"></i> @user.FirstName @user.LastName</td>
                                <td><div><i class="fas fa-envelope"></i> @user.Email</div></td>
                                <td>@user.IdCode</td>
                                <td><span class="badge @GetRoleClass(user.Role)">@GetRoleDisplayName(user.Role)</span></td>
                                <td>@(user.Company ?? "-")</td>
                                <td>
                                    <span class="badge @(user.IsActive ? "bg-success" : "bg-secondary")">
                                        @(user.IsActive ? "فعال" : "غیر فعال")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        @if (user.IsActive)
                                        {
                                            <button class="btn btn-info" @onclick="() => EditUser(user.Id)">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-success" @onclick="() => ActiveUser(user.Id)">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        }
                                        <button class="btn btn-warning" @onclick="() => ResetPasswordUser(user.Id)">
                                            <i class="fas fa-key"></i>
                                        </button>
                                        <button class="btn btn-danger" @onclick="() => DeleteUser(user)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (totalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mt-3">
                            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                <button class="page-link" @onclick="PrevPage">قبلی</button>
                            </li>
                            @for (int i = 1; i <= totalPages; i++)
                            {
                                var page = i;
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <button class="page-link" @onclick="() => GoToPage(page)">@i</button>
                                </li>
                            }
                            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                <button class="page-link" @onclick="NextPage">بعدی</button>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>

@code {
    private bool isLoading = true;
    private List<UserListDto> filteredUsers = new();
    private List<string> companies = new();
    private string searchQuery = "";
    private string selectedRole = "";
    private string selectedStatus = "";
    private string selectedCompany = "";
    private UserListDto? userToDelete;
    private bool isDeletingUser = false;
    private string errorMessage = string.Empty;
    private int totalUsersCount = 0;
    private int activeUsersCount = 0;
    private int adminUsersCount = 0;
    private int currentPage = 1;
    private int pageSize = 15;
    private int totalRecords = 0;
    private int totalPages => (int)Math.Ceiling((double)totalRecords / pageSize);

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await LoadUserStats();
        await LoadUsers();
    }

    private async Task LoadUserStats()
    {
        try
        {
            var response = await Http.GetAsync("api/users/stats");
            if (response.IsSuccessStatusCode)
            {
                var stats = await response.Content.ReadFromJsonAsync<UserStatsDto>();
                if (stats != null)
                {
                    totalUsersCount = stats.Total;
                    activeUsersCount = stats.Active;
                    adminUsersCount = stats.Admin;
                }
            }
        }
        catch
        {
            errorMessage = "خطا در بارگذاری آمار کاربران.";
        }
    }

    private async Task LoadUsers()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;
            StateHasChanged();

            var queryParams = new Dictionary<string, string?>
                {
                    ["pageNumber"] = currentPage.ToString(),
                    ["pageSize"] = pageSize.ToString(),
                    ["searchQuery"] = string.IsNullOrEmpty(searchQuery) ? null : searchQuery,
                    ["status"] = string.IsNullOrEmpty(selectedStatus) ? null : selectedStatus,
                    ["selectedRole"] = string.IsNullOrEmpty(selectedRole) ? null : selectedRole,
                    ["selectedCompany"] = string.IsNullOrEmpty(selectedCompany) ? null : selectedCompany
                };

            var queryString = string.Join("&", queryParams
                .Where(kv => kv.Value != null)
                .Select(kv => $"{kv.Key}={Uri.EscapeDataString(kv.Value!)}"));

            var response = await Http.GetAsync($"api/users?{queryString}");
            if (response.IsSuccessStatusCode)
            {
                var pageResult = await response.Content.ReadFromJsonAsync<PagedResult<UserListDto>>() ?? new();
                filteredUsers = pageResult.Items ?? new();
                totalRecords = pageResult.TotalCount;
                companies = filteredUsers
                    .Where(u => !string.IsNullOrEmpty(u.Company))
                    .Select(u => u.Company!)
                    .Distinct()
                    .OrderBy(c => c)
                    .ToList();
            }
            else
            {
                errorMessage = "خطا در بارگذاری لیست کاربران.";
            }
        }
        catch
        {
            errorMessage = "خطای غیرمنتظره در بارگذاری کاربران.";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void ResetFilters()
    {
        searchQuery = selectedRole = selectedStatus = selectedCompany = string.Empty;
        _ = LoadUsers();
    }

    private void NavigateToCreateUser() => Navigation.NavigateTo("/panel/users/create");
    private void EditUser(int userId) => Navigation.NavigateTo($"/panel/users/edit/{userId}");
    private void ResetPasswordUser(int userId) => Navigation.NavigateTo($"/panel/users/ResetPassword/{userId}");

    private void DeleteUser(UserListDto user) => userToDelete = user;

    private async Task ConfirmDelete()
    {
        if (userToDelete == null) return;

        try
        {
            isDeletingUser = true;
            StateHasChanged();

            var response = await Http.DeleteAsync($"api/users/{userToDelete.Id}");
            if (response.IsSuccessStatusCode)
            {
                filteredUsers.Remove(userToDelete);
                await LoadUsers();
            }
            else
            {
                errorMessage = "خطا در حذف کاربر.";
            }
        }
        catch
        {
            errorMessage = "خطای غیرمنتظره در حذف کاربر.";
        }
        finally
        {
            isDeletingUser = false;
            userToDelete = null;
            StateHasChanged();
        }
    }

    private void CancelDelete() => userToDelete = null;

    private async Task ActiveUser(int id)
    {
        var model = new ActiveUserCommand { Id = id };
        var response = await Http.PostAsJsonAsync("api/users/ActiveUser", model);
        if (response.IsSuccessStatusCode)
            await LoadUsers();
    }

    private async Task GoToPage(int page)
    {
        currentPage = page;
        await LoadUsers();
    }

    private async Task PrevPage()
    {
        if (currentPage > 1)
        {
            currentPage--;
            await LoadUsers();
        }
    }

    private async Task NextPage()
    {
        if (currentPage < totalPages)
        {
            currentPage++;
            await LoadUsers();
        }
    }

    private string GetRoleDisplayName(UserRole role) => role switch
    {
        UserRole.Admin => "مدیر",
        UserRole.Manager => "مدیر بخش",
        UserRole.User => "کاربر",
        _ => role.ToString()
    };

    private string GetRoleClass(UserRole role) => role.ToString().ToLower();
}
