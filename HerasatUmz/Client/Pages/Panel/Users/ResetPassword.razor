@page "/panel/users/ResetPassword/{Id:int}"
@attribute [Authorize(Policy = "AdminOrManager")]
@inherits BaseComponent
@layout PanelLayout

<div class="change-password-container">

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <Toast Message="@errorMessage" Type="@toastType" Duration="5000" />
    }
    @if (isLoading)
    {
        <p>Loading...</p>
    }
    else if (user != null && resetpasswordUserCommand != null)
    {
        <header class="page-header-create">
            <div class="header-content-create">
                <div class="header-navigation">
                    <button class="back-button" @onclick="NavigateBack" aria-label="بازگشت">
                        <i class="fas fa-arrow-right"></i>
                        <span>بازگشت</span>
                    </button>
                </div>
                <div class="header-title-section">
                    <div class="page-icon-create">
                        <i class="fas fa-key"></i>
                    </div>
                    <div class="page-title-info">
                        <h1 class="page-title-create">تغییر رمز عبور @user.FullName</h1>
                        <p class="page-subtitle-create">کدملی:@user.IdCode</p>
                        <p class="page-subtitle-create">تماس:@user.Phone</p>

                    </div>
                </div>
            </div>
        </header>

        <div class="form-container-modern">
            <EditForm Model="@resetpasswordUserCommand" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-group-modern">
                    <label for="newPassword" class="form-label required">رمز عبور جدید</label>
                    <div>
                        <i class="fas fa-lock input-icon"></i>
                        <input id="newPassword"  type="password" @bind="resetpasswordUserCommand.NewPassword" class="form-input-modern" required />
                    </div>
                    <ValidationMessage For="@(() => resetpasswordUserCommand.NewPassword)" />
                </div>

                <div class="form-group-modern">
                    <label for="confirmPassword" class="form-label required">تکرار رمز عبور</label>
                    <div>
                        <i class="fas fa-lock input-icon"></i>
                        <input id="confirmPassword"  type="password" @bind="resetpasswordUserCommand.ConfirmNewPassword" class="form-input-modern" required />
                    </div>
                    <ValidationMessage For="@(() => resetpasswordUserCommand.ConfirmNewPassword)" />
                </div>

                <div class="form-step-actions">
                    <button type="submit" class="btn-modern btn-primary-modern" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <i class="fas fa-spinner fa-spin"></i>
                            <span>در حال ذخیره...</span>
                        }
                        else
                        {
                            <i class="fas fa-save"></i>
                            <span>ذخیره رمز عبور</span>
                        }
                    </button>
                    <button type="button" class="btn-modern btn-secondary-modern" @onclick="NavigateBack">
                        <i class="fas fa-times"></i>
                        <span>انصراف</span>
                    </button>
                </div>
            </EditForm>

            @if (showSuccessMessage)
            {
                <div class="success-toast-modern" role="alert" aria-label="پیام موفقیت">
                    <div class="toast-content">
                        <i class="fas fa-check-circle"></i>
                        <div class="toast-text">
                            <span class="toast-title">موفقیت‌آمیز!</span>
                            <span class="toast-message">رمز عبور با موفقیت تغییر یافت</span>
                        </div>
                    </div>
                    <div class="toast-progress"></div>
                </div>
            }
        </div>

    }
    else
    {
        <p class="text-danger">کاربر یافت نشد.</p>
    }

</div>


@code {

    [Parameter]
    public int Id { get; set; }
    private bool showSuccessMessage = false;

    private bool isLoading = true;
    private bool isSubmitting = false;
    private string errorMessage = string.Empty;
    private UserDto? user;
    private ResetpasswordUserCommand resetpasswordUserCommand { get; set; }=new();
    private bool isAdmin = false;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await LoadUser();
        StateHasChanged();
    }

    private async Task LoadUser()
    {
        try
        {
            
            isLoading = true;
            errorMessage = string.Empty;

            var response = await Http.GetAsync($"api/users/{Id}");
            if (response.IsSuccessStatusCode)
            {
                user = await response.Content.ReadFromJsonAsync<UserDto>();
                resetpasswordUserCommand = new ResetpasswordUserCommand
                    {
                        IdCode = user.IdCode
                    };
            }
            else
            {
                errorMessage = "مشکل در تغییر پسورد";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "مشکل در دریافت اطلاعات کاربر";
        }
        finally
        {
            isLoading = false;
        }
    }
    private async Task HandleSubmit()
    {
        if (isSubmitting) return;
        if (!ValidateForm()) return;

        try
        {

            isSubmitting = true;
            errorMessage = string.Empty;
            StateHasChanged();
           
            var response = await Http.PostAsJsonAsync($"api/users/{Id}/change-password", resetpasswordUserCommand);
            if (response.IsSuccessStatusCode)
            {
                showSuccessMessage = true;
                errorMessage = "تغییر پسورد انجام شد";
                await Task.Delay(2000);
                Navigation.NavigateTo("/panel/users");
            }
            else
            {
                errorMessage = "خطا در تغییر پسورد";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "خطا سرور در تغییر پسورد";
        }
        finally
        {
            isSubmitting = false;
            StateHasChanged();
        }
    }

    private void NavigateBack()
    {
        try
        {
            Navigation.NavigateTo("/panel/users");
        }
        catch (Exception ex)
        {
            errorMessage = "خطا سرور دربرگشت";
        }
    }
    private bool ValidateForm()
    {
        bool isValid = true;
        if (string.IsNullOrWhiteSpace(resetpasswordUserCommand.NewPassword))
        {
            errorMessage = "پسورد جدید را وارد کنید";
            isValid = false;
        }
        if (resetpasswordUserCommand.NewPassword != resetpasswordUserCommand.ConfirmNewPassword)
        {
            errorMessage = "پسورد جدید و تکرار ان همخوانی ندارد";
            isValid = false;
        }

        return isValid;
    }
    
}
