@page "/panel/profile"
@attribute [Authorize]
@inherits BaseComponent
@layout PanelLayout

<PageTitle>پروفایل من</PageTitle>

<div class="profile-page">
    <header class="page-header-create">
        <div class="header-content-create">
            <div class="header-title-section">
                <div class="page-icon-create">
                    <i class="fas fa-user-circle"></i>
                </div>
                <div class="page-title-info">
                    <h1 class="page-title-create">پروفایل کاربر</h1>
                    <p class="page-subtitle-create">اطلاعات حساب خود را مشاهده و ویرایش کنید</p>
                </div>
            </div>
        </div>
    </header>

    <div class="content-wrapper">
        @if (isLoading)
        {
            <div class="loading-container">
                <div class="loading-spinner">
                    <i class="fas fa-spinner fa-spin"></i>
                    <p>در حال بارگذاری اطلاعات...</p>
                </div>
            </div>
        }
        else if (user == null)
        {
            <div class="no-results">
                <i class="fas fa-exclamation-triangle"></i>
                <h3>کاربر یافت نشد</h3>
                <button class="btn-modern btn-primary-modern" @onclick="Reload">
                    <i class="fas fa-redo"></i> تلاش مجدد
                </button>
            </div>
        }
        else
        {
            <EditForm Model="updateUserCommand" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-section-modern active">
                    <div class="form-grid-modern">
                        <div class="form-group-modern">
                            <label class="form-label">نام</label>
                            <InputText @bind-Value="updateUserCommand.FirstName" class="form-input-modern" />
                            <ValidationMessage For="@(() => updateUserCommand.FirstName)" />
                        </div>

                        <div class="form-group-modern">
                            <label class="form-label">نام خانوادگی</label>
                            <InputText @bind-Value="updateUserCommand.LastName" class="form-input-modern" />
                            <ValidationMessage For="@(() => updateUserCommand.LastName)" />
                        </div>

                        <div class="form-group-modern">
                            <label class="form-label">ایمیل</label>
                            <InputText @bind-Value="updateUserCommand.Email" class="form-input-modern" />
                            <ValidationMessage For="@(() => updateUserCommand.Email)" />
                        </div>

                        <div class="form-group-modern">
                            <label class="form-label">شماره تماس</label>
                            <InputText @bind-Value="updateUserCommand.Phone" class="form-input-modern" />
                            <ValidationMessage For="@(() => updateUserCommand.Phone)" />
                        </div>

                        <div class="form-group-modern">
                            <label class="form-label">کد ملی</label>
                            <input type="text" value="@user.IdCode" readonly
                                   class="form-input-modern bg-gray-100 cursor-not-allowed text-gray-500" />
                        </div>

                        <div class="form-group-modern">
                            <label class="form-label">شرکت</label>
                            <InputText @bind-Value="updateUserCommand.Company" class="form-input-modern" />
                        </div>

                        <div class="form-group-modern">
                            <label class="form-label">سمت شغلی</label>
                            <InputText @bind-Value="updateUserCommand.JobTitle" class="form-input-modern" />
                        </div>
                    </div>

                    <div class="form-step-actions">
                        <button type="submit" class="btn-modern btn-primary-modern" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-small">در حال ذخیره...</span>
                            }
                            else
                            {
                                <i class="fas fa-save">ذخیره تغییرات</i>
                            }
                        </button>
                    </div>
                </div>
            </EditForm>
        }

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="error-toast">
                <i class="fas fa-exclamation-triangle"></i>
                <span>@errorMessage</span>
                <button @onclick="() => errorMessage = string.Empty">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        }

        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="success-toast">
                <i class="fas fa-check-circle"></i>
                <span>@successMessage</span>
                <button @onclick="() => successMessage = string.Empty">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        }
    </div>
</div>

@code {
    private UserDto? user;
    private UpdateUserCommand updateUserCommand = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await LoadUserProfile();
    }

    private async Task LoadUserProfile()
    {
        try
        {
            isLoading = true;
            errorMessage = string.Empty;

            var response = await Http.GetAsync("api/users/me");
            if (response.IsSuccessStatusCode)
            {
                user = await response.Content.ReadFromJsonAsync<UserDto>();
                if (user != null)
                {
                    updateUserCommand = new UpdateUserCommand
                        {
                            Id = user.Id,
                            FirstName = user.FirstName,
                            LastName = user.LastName,
                            Email = user.Email,
                            Phone = user.Phone,
                            Company = user.Company,
                            JobTitle = user.JobTitle,
                            CodeId = user.IdCode,
                            Role=user.Role
                        };
                }
            }
            else
            {
                errorMessage = "خطا در دریافت اطلاعات کاربر.";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading profile: {ex.Message}");
            errorMessage = "در بارگذاری اطلاعات خطایی رخ داد.";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleSubmit()
    {
        try
        {
            isSubmitting = true;
            successMessage = string.Empty;
            errorMessage = string.Empty;

            var response = await Http.PutAsJsonAsync($"api/users/{user!.Id}", updateUserCommand);
            if (response.IsSuccessStatusCode)
            {
                successMessage = "تغییرات با موفقیت ذخیره شد.";
                await LoadUserProfile(); // رفرش اطلاعات پس از ذخیره
            }
            else
            {
                errorMessage = "خطا در ذخیره تغییرات.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"خطا در ویرایش اطلاعات: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Reload() => _ = LoadUserProfile();
}
